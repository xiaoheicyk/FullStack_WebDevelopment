@model ApplicationCore.Entities.Cast

@{
ViewData["Title"] = Model.Name;
}

<div class="container mt-5">
    <h1>@ViewData["Title"]</h1>

    <div class="row">
        <div class="col-md-4">
            <img src="@Model.ProfilePath" alt="@Model.Name" class="img-fluid" />
        </div>
        <div class="col-md-8">
            <h3>Details</h3>
            <ul class="list-group">
                <li class="list-group-item"><strong>Name:</strong> @Model.Name</li>
                <li class="list-group-item"><strong>Gender:</strong> @Model.Gender</li>
                <li class="list-group-item"><strong>Profile Path:</strong>
                    <a href="@Model.ProfilePath" target="_blank">View Profile</a>
                </li>
                <li class="list-group-item"><strong>TMDB URL:</strong>
                    <a href="@Model.TmdbUrl" target="_blank">View TMDB Profile</a>
                </li>
            </ul>
            <a href="@Url.Action("Index", "Cast")" class="btn btn-secondary mt-3">Back to List</a>
        </div>
    </div>
</div>
