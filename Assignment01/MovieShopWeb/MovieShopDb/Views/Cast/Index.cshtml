@using Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<ApplicationCore.Entities.Cast>;
@{
ViewData["Title"] = "List of Casts";
}
<h1>@ViewData["Title"]</h1>
<a asp-action="Create" asp-controller="Cast">Add New Cast</a>
<table class="table table-bordered table-hover">
    <thead>
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Gender</th>
        <th>Profile Path</th>
        <th>Tmdb Url</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
    <tr>
        <td>@item.Id</td>
        <td>@item.Name</td>
        <td>@item.Gender</td>
        <td><a href=@item.ProfilePath>Profile Path</a></td>
        <td><a href=@item.TmdbUrl>TmdbUrl</a></td>
        <td>
            <a asp-action="Edit" asp-controller="Genre" asp-route-id="@item.Id">Edit</a>
            <a asp-action="Delete" asp-controller="Genre" asp-route-id="@item.Id">Delete</a>
        </td>
    </tr>
    }
    </tbody>
</table>