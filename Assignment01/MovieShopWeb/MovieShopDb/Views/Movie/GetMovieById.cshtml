@model ApplicationCore.Entities.Movie

@{
    ViewData["Title"] = Model.Title; 
}

<h1>@Model.Id</h1>

<div class="row">
    <div class="col-md-4">
        <img src="@Model.BackdropUrl" alt="Movie Poster" class="img-fluid" />
    </div>
    <div class="col-md-8">
        <h3>Id</h3>
        <p>@Model.Id</p>
        

        <h5>Created by:</h5>
        <span class="badge bg-secondary">@Model.CreatedBy</span>

        <h5>Release Date:</h5>
        <p>@Model.ReleaseDate</p> 
    </div>
</div>


<div class="mt-4">
    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#buyModal">Buy Movie</button>
    <button class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#reviewModal">Review</button>
</div>
