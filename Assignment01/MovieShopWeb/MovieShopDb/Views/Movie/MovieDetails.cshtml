@model ApplicationCore.Entities.Movie

@{
    ViewData["Title"] = "Movie Details";
}

<div class="container mt-5">
    <h1>@ViewData["Title"]</h1>
    
    <div class="row">
        <div class="col-md-4">
            <img src="@Model.BackdropUrl" alt="@Model.Title" class="img-fluid" />
        </div>
        
        <div class="col-md-8">
            <h2>@Model.Title</h2>
            <p><strong>Overview:</strong> @Model.Overview</p>
            <p><strong>Created By:</strong> @Model.CreatedBy</p>
            <p><strong>Created Date:</strong> @Model.CreatedDate</p>
            <p><strong>IMDB URL:</strong> <a href="@Model.ImdbUrl" target="_blank">@Model.ImdbUrl</a></p>
            <p><strong>Budget:</strong> $@Model.Budget</p>
            <p><strong>Revenue:</strong> $@Model.Revenue</p>
            <p><strong>Runtime:</strong> @Model.Runtime minutes</p>
            <p><strong>Price:</strong> $@Model.Price</p>
            <p><strong>ID:</strong> @Model.Id</p>
        </div>
    </div>
</div>