@using Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<ApplicationCore.Entities.Movie>;
@{
    ViewData["Title"] = "List of Movies";
}
<h1>@ViewData["Title"]</h1>
<table class="table table-bordered table-hover">
    <thead>
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Imdb</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>@item.Id</td>
            <td>@item.Title</td>
            <td><a href=@item.ImdbUrl>Imdb Link</a></td>
            <td>
                <a asp-action="Edit" asp-controller="Movie" asp-route-id="@item.Id">Edit</a>
                <a asp-action="Delete" asp-controller="Movie" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>