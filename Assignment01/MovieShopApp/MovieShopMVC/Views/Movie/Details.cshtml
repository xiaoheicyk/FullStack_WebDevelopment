    @*     <h3>Movie Facts</h3> *@
    @*     <ul> *@
    @*         <li>Box Office: $@Model.BoxOffice.ToString("N")</li> *@
    @*         <li>Budget: $@Model.Budget.ToString("N")</li> *@
    @*         <li>Genres: *@
    @*             @foreach (var genre in Model.Genres) *@
    @*             { *@
    @*             <span class="genre">@genre</span> *@
    @*             } *@
    @*         </li> *@
    @*     </ul> *@
    @* </div> *@

    <!-- Cast Section -->
    @* <div class="movie-cast"> *@
    @*     <h3>Cast</h3> *@
    @*     <ul> *@
    @*         @foreach (var actor in Model.Cast) *@
    @*         { *@
    @*         <li> *@
    @*             <img src="@actor.ImageUrl" alt="@actor.Name" class="actor-photo" style="width:50px; height:auto; border-radius:50%; margin-right:10px; display:inline-block;" /> *@
    @*             <span class="actor-name">@actor.Name as @actor.CharacterName</span> *@
    @*         </li> *@
    @*         } *@
    @*     </ul> *@
    @* </div> *@

    <!-- Links Section -->
    <div class="movie-links">
        <h3>More Information</h3>
        @if (!string.IsNullOrEmpty(Model.ImdbUrl))
        {
        <a href="@Model.ImdbUrl" target="_blank">View on IMDb</a>
        }
    </div>
</div>
</body>
</html>
